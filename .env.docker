# Docker Environment Configuration for llmbothub
# Copy this file to .env and fill in your values.
# This single .env is used for docker-compose substitution and app runtime config.

# Build
WITH_CUDA=true
CUDA_ARCHS=120

# Ports (host -> container)
MCP_PORT=8001
SERVICE_PORT=8642

# Paths
MODELS_PATH=./models
LLMBOTHUB_MODEL_CACHE_DIR=~/.cache/llmbothub/models
HF_HOME=~/.cache/huggingface

# Core
LLMBOTHUB_DEFAULT_BOT=nova
LLMBOTHUB_DEFAULT_MODEL_ALIAS=gpt-5.2-chat-latest
LLMBOTHUB_DEFAULT_USER=user
LLMBOTHUB_USE_SERVICE=true
LLMBOTHUB_SERVICE_HOST=0.0.0.0
LLMBOTHUB_SERVICE_PORT=8642
LLMBOTHUB_MEMORY_SERVER_URL=http://127.0.0.1:8001
LLMBOTHUB_LOG_DIR=.logs
LLMBOTHUB_LOG_PREFIX=docker
LLMBOTHUB_DEBUG_TURN_LOG=false
LLMBOTHUB_HISTORY_DURATION=1800
LLMBOTHUB_MAX_TOKENS=4096

# Llama.cpp (optional)
LLMBOTHUB_LLAMA_CPP_N_CTX=8192
LLMBOTHUB_LLAMA_CPP_N_GPU_LAYERS=-1
LLMBOTHUB_LLAMA_CPP_N_BATCH=1024
LLMBOTHUB_LLAMA_CPP_FLASH_ATTN=true

# PostgreSQL
LLMBOTHUB_POSTGRES_HOST=localhost
LLMBOTHUB_POSTGRES_PORT=5432
LLMBOTHUB_POSTGRES_USER=llmbothub
LLMBOTHUB_POSTGRES_PASSWORD=
LLMBOTHUB_POSTGRES_DATABASE=llmbothub

# Search
LLMBOTHUB_SEARCH_PROVIDER=duckduckgo
LLMBOTHUB_TAVILY_API_KEY=
LLMBOTHUB_BRAVE_API_KEY=

# Providers
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HF_TOKEN=

# Nextcloud Talk (optional)
LLMBOTHUB_NEXTCLOUD_URL=https://nextcloud.example.com
LLMBOTHUB_NEXTCLOUD_BOT_SECRET=
LLMBOTHUB_TALK_PROVISIONER_URL=http://localhost:8790
LLMBOTHUB_TALK_PROVISIONER_TOKEN=

# Transformers / HF behavior
HF_HUB_DISABLE_PROGRESS_BARS=1
TRANSFORMERS_NO_ADVISORY_WARNINGS=1
TRANSFORMERS_VERBOSITY=error
TOKENIZERS_PARALLELISM=false
